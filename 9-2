fun main(args: Array<String>)
{
    val input = readLine()!! пыпи
    var vowelsCount = 0
    var consonantsCount = 0

    for (char in input)
    {
        if ("аеиоуыэюя".contains(char))
        {
            vowelsCount++
        } else
        {
            consonantsCount++
        }
    }

    println("Количество гласных букв: $vowelsCount")
    println("Количество согласных букв: $consonantsCount")
}
